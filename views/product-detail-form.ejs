<body class="product-edit">
	<%- include('./partials/header') %>
	<section class="product-detail-section" >
		<div>				
			<h2>Edita tus seguros</h2>
		</div>
		<div class="product-detail-form">
            <div>
                <h3><%= product.name %> </h3>
            </div>
            <div class="card">
                <figure>
                    <i class="<%= product.icono %>"></i>
                </figure>
                <div class= "contenido">
                    <h3><%= product.name %> </h3>
                </div>
            </div>
