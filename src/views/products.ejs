<!DOCTYPE html>
<html lang="es">
<%- include('./partials/head', {title: 'Formulario de creaciÃ³n' }) %>

    <body class="product-edit">
        <%- include('./partials/header') %>
            <section class="product-detail-section">
                <div class="section-title">
                    <h2>Seguros </h2>
                </div>
                <div class="product-detail-wrapper">
                    <% products.forEach(product=> { %>
                        <div class="product-col">
                            <div class="product-detail-form">
                                <div class="product-detail-title">
                                    <h3 class="card-title">
                                        <%= product.name %>
                                    </h3>
                                </div>
                                <div class="product-detail-inline">
                                    <h4>Categoria:</h4>
                                    <h5 class="product-detail-category">
                                        <%= product.category %>
                                    </h5>
                                    <h4>Precio:</h4>
                                    <h5 class="product-detail-price"> $<%= product.price %> / MES </h5>
                                </div>
                                <div class="product-detail-description">
                                    <p>
                                        <%= product.description %>
                                    </p>
                                </div>
                                <div class="product-detail-buttons">
                                    <a href="/products/detail/<%= product.id %>" class="btn"><button>Ver detalle</button></a>
                                    <a href="/products/edit/<%= product.id %>" class="btn"><button>Editar</button></a>
                                    <!-- <a href="/products/<%= product.id %>/?_method=delete" class="btn"><button>Eliminar</button></a> -->
                                    <form action="/products/<%= product.id %>/?_method=delete" method="POST" class="btn">
                                        <button type="submit">Eliminar</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                        
                        <% }) %>
                </div>
            </section>
    </body>

</html>